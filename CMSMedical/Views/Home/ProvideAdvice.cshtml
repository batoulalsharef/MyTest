@{
    Layout ="~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Provide Advice";
}
<body onload="Captcha();">
<!--::regervation_part start::-->
    <section class="regervation_part section_padding">
        <div class="container">
            <div class="row align-items-center regervation_content">
                <div class="col-lg-7">
                    <div class="regervation_part_iner">
                        <form>
                            
                            <h2>We are pleased to receive your medical advice to reply to you by the best doctors</h2>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <input type="email" class="form-control" id="inputEmail4" placeholder="Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="password" class="form-control" id="inputPassword4"
                                        placeholder="Email address">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="inputConsultation" placeholder="Consultation title">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="number" class="form-control" id="inputphone"
                                           placeholder="Phone Number">
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="form-control" id="Select">
                                        <option value="1" selected>SEX</option>
                                        <option value="2">MALE</option>
                                        <option value="3">FEMALE</option>
                                       
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="number" class="form-control" id="inputage"
                                           placeholder="Age">
                                </div>
                                <div class="form-group col-md-12">
                                    <textarea class="form-control" id="Textarea1" rows="4"
                                        placeholder="History (Do you suffer from other diseases such as diabetes and high blood pressure ... mention that) "></textarea>
                                </div>

                                <div class="form-group col-md-12">
                                    <textarea class="form-control" id="Textarea2" rows="4"
                                              placeholder="Consultation text  "></textarea>
                                </div>

                                <div class="form-group col-md-12">
                                    <input class="form-control" type="text" id="mainCaptcha"/>
                                    <input type="button" class="form-control" id="refresh" value="Refresh" onclick="Captcha();" />
                                    <input type="text" class="form-control" id="txtInput"/>
                                </div>
                                
                            </div>
                            <div class="regerv_btn">
                                <a href="#" class="btn_2" onclick="alert(ValidCaptcha());">Send</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5 col-md-6">
                    <div class="reservation_img">
                        <img src="~/Content/img/reservation.png" alt="" class="reservation_img_iner">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--::regervation_part end::-->

</body>

